{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<section class="section" id="user_account">
    <div class="container">
        <div class="user-header flex justify-between items-center">
            <h3>Bonjour {{ app.user.firstName }} {{ app.user.lastName }} ! </h3>
            {% if app.user %}
                <a href="/logout" class="button outline">Me deconnecter</a>
            {% endif %}
        </div>
        
        <div class="animals-wrapper">
            {% if animals %}
                {% for animal in animals %}
                    <li>{{ animal.name }}</li>
                {% endfor %}
            {% else %}
                <h3>Aucun animal enregistr√©</h3>
            {% endif %}
        </div>
        
        <a href="" class="button">Ajouter un animal</a>
    </div>
</section>
{% endblock %}
