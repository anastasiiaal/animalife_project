                    <input type="text" name="animal" placeholder="Type d'animal" class="input-field" value="{{ app.request.query.get('animal') }}"/>
                </div>
                <div class="input-wrapper">
                    <img src="{{ asset('images/location.svg') }}" alt="Ville">
