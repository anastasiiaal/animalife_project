                </div>
                <button type="submit" class="search-button">Rechercher</button>
            </div>
        </form>

        <div id="params">
            {% if emergency %}
                <div class="param urgency">Urgence</div>
            {% endif %}
            {% for name, value in app.request.query.all %}
                {% if value %}
                    <div class="param" data-param="{{ name }}">{{ value }} <span>&times;</span></div>
